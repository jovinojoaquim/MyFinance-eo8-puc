@using myfinance_web_netcore.Domain

<h1>Listagem de Transações financeiras</del></h1>

<br />

<a type="button" class="btn btn-primary" asp-area="" asp-controller="Transacao" asp-action="Cadastro"> Registrar uma transação</a>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Historico</th>
        <th>Tipo</th>
        <th>Valor</th>
        <th>Data</th>
        <th>#</th>
        <th>#</th>
    </tr>

    @{
        foreach (var item in (List<Transacao>)ViewBag.Lista)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Historico</td>
                <td>@item.PlanoConta.Tipo</td>
                <td>@item.Valor</td>
                <td>@item.Data</td>
                <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id)">Editar</button></td>
                <td><button type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">Excluir</button></td>
            </tr>
        }

    }
</table>

<script>
    function Editar(id) {
        window.location.href = "../Transacao/Cadastro/" + id;
    }

    function Excluir(id) {
        window.location.href = "../Transacao/Excluir/" + id;
    }
</script>